@model ClashOfTheCharacters.Models.ContactRequest
@{
    ViewBag.Title = "ContactForm";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/ContactForm.css" rel="stylesheet" />
    <title>ContactForm</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="container-fluid profile-partial text-center"><h4>Contact us!</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Your name:</label><br />
                    @Html.TextBoxFor(x => x.Name, new { @class = "formcontrol" })
                </div>
                <div class="form-group">
                    <label>Your email:</label><br />
                    @Html.TextBoxFor(x => x.Email, new { @class = "formcontrol" })
                </div>
                <div class="form-group">
                    <label>Your phone:</label><br />
                    @Html.TextBoxFor(x => x.Phone, new { @class = "formcontrol" })
                </div>
                <div class="form-group">
                    <label>Your Question</label><br />
                    @Html.TextBoxFor(x => x.SupportRequest, new { @class = "formcontrol" })
                </div>
                <div class="text-center">
                    <input class="btn container-fluid profile-partial" type="submit"
                           value="Submit Question" />
                </div>
            }
        </div>
    </div>
</body>
</html>
